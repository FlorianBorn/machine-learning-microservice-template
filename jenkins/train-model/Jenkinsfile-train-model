node {
    config = readYaml(file: "jenkins/config.yaml")
}

pipeline {
    agent any
    stages {
        // script {
        //             def config = readYaml(file: "jenkins/config.yaml")
        //         }
        stage("Train Model") {
            agent {
                docker {
                    image "${config.repository}/${config.runtime_image_name}:${config.tag}" // ToDo: take the image name, repo and tag from a config file 
                }
            }
            steps {                
                sh "echo Train Model!"
                dir("jenkins/train-model") {
                    sh "python3 train.py"
                }
                
            }
        }
        stage("Test Model") {
            steps {
               sh "echo Test Model!"
            }
        }
        stage("Push Model") {
            steps {
                sh "echo Push Model!"
            }
        }
    }
}